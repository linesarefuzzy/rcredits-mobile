{
  "extends": "standard",
  "env": {
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "globals": {
    "QUnit": false,
    "_": false,
    "asyncTest": false,
    "DB": false,
    "dbVersion": true,
    "nextTest": false,
    "sample": false,
    "queuedAsyncTest": false,
    "queuedModule": false,

    "util": false,
    "env": false,
    "mocha": false,
    "beforeEach": false,
    "afterEach": false,
    "describe": false,
    "expect": false,
    "assert": false,
    "it": false,
    "chai": false,
    "sinon": false
  },
  "rules": {
    "semi": [2, "always"],
    "indent": ["error", 4],
    "one-var": 0,
    "no-var": 2,
    "prefer-const": 2,
  }
}
